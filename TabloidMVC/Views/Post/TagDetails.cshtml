@model IEnumerable<TabloidMVC.Models.Tag>

@{
				ViewData["Title"] = "TagDetails";
}

<div class="container-fluid">
				<div class="row d-flex justify-content-center align-content-center">
												<div class="col-md-4 ">
																<h1 class="text-center mt-5">Add Tags</h1>

																<h4 class="text-center">Tags</h4>
												</div>
				</div>
								<hr />
				<div class="row justify-content-center">
								<div class="col-md-4">
												<form asp-action="TagDetails">
																<div asp-validation-summary="ModelOnly" class="text-danger"></div>
																<div class="btn-group-toggle d-flex flex-column align-content-center " data-toggle="buttons">
																				@foreach (Tag tag in Model)
																				{
																								@*<div class="p-1 align-self-center">*@
																								<label class="btn btn-info p-1 my-2">
																												<input type="checkbox" autocomplete="off">@tag.Name
																								</label>
																								@*</div>*@
																				}
																</div>
																<div class="form-group mt-2">
																				<input type="submit" value="Save" class="btn btn-primary" />
																</div>
												</form>
								</div>
				</div>
				<div class="row justify-content-center">
								<div>
												<a asp-action="Index">Back to List</a>
								</div>
				</div>


@section Scripts {
				@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
